/* pages/message/message.wxss */

page {
  background-color: #f1f1f1;
  padding-top: 80rpx;
}

.tab {
  width: 750rpx;
  height: 80rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  background-color: #fff;
}

.tab .item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  position: relative;
  color: #666;
}

.tab .item.cur {
  color: #5677fc;
}

.tab .item.cur::before {
  content: '';
  width: 100%;
  height: 4rpx;
  background-color: #5677fc;
  position: absolute;
  left: 0;
  bottom: 0;
}

.list .item {
  padding: 30rpx;
  font-size: 28rpx;
  position: relative;
  background-color: #fff;
  border-top: 1rpx solid #f1f1f1;
}

.list .item .titt {
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list .item image {
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  opacity: 0.3;
}

.list .item .time {
  color: #999;
  font-size: 24rpx;
  padding-top: 5rpx;
}

.list .item .badge {
  display: inline-block;
  font-size: 24rpx;
  color: #fff;
  background-color: #5677fc;
  border-radius: 10rpx;
  position: absolute;
  right: 70rpx;
  top: 45rpx;
  padding: 4rpx 10rpx;
}

.list .item .badge.cur {
  background-color: rgb(201, 201, 201);
}
