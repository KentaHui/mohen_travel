/* pages/me/me.wxss */

.top {
  position: relative;
  padding: 30rpx;
  background-color: #575757;
  color: #fff;
  font-size: 28rpx;
  padding-bottom: 40rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.top .tx {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
}

.top .name {
  padding-top: 20rpx;
  font-size: 36rpx;
}

.top .follow {
  overflow: hidden;
}

.top .sub {
  padding: 10rpx 0;
}

.top .follow .item {
  display: inline-block;
}

.top .follow .item:first-child {
  padding-right: 30rpx;
  border-right: 1rpx solid #fff;
}

.top .follow .item:last-child {
  padding-left: 30rpx;
}

.top .name .sex {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin-bottom: -5rpx;
}

.top .tips {
  overflow: hidden;
  padding-top: 20rpx;
}

.top .tips .item {
  display: inline-block;
  padding: 3rpx 30rpx;
  background-color: #b4b4b2;
  border-radius: 90rpx;
  margin-right: 10rpx;
}

.top .tips .item:first-child {
  background-color: #b47c97;
}

.follo-btn {
  display: block;
  padding: 0 30rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  border-radius: 8rpx;
  position: absolute;
  right: 30rpx;
  top: 70rpx;
  background-color: #5677fc;
  color: #ffff;
}

.follo-btn image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin-bottom: -7rpx;
}

.follo-btn.followed {
  background-color: #b4b4b2;
}

.mail {
  display: block;
  width: 65rpx;
  height: 64rpx;
  position: absolute;
  right: 30rpx;
  top: 70rpx;
  border-radius: 8rpx;
}

.top .tab {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}

.top .tab .item {
  flex: 1;
  color: #333;
  line-height: 80rpx;
  text-align: center;
  height: 80rpx;
}

text.hui {
  font-size: 24rpx;
  color: #b4b4b2;
  margin-left: 10rpx;
}

.top .tab .item .kuai {
  display: inline-block;
  position: relative;
}

.top .tab .item.cur .kuai::before {
  content: '';
  width: 100%;
  height: 6rpx;
  background-color: #e4463b;
  position: absolute;
  left: 0;
  bottom: 0;
}

.top .tab .item.cur .kuai {
  color: #e4463b;
}

.list {
  padding: 20rpx;
  font-size: 28rpx;
}

.list .topic {
  position: relative;
  padding-bottom: 10rpx;
}

.list .topic .l {
  font-size: 32rpx;
}

.list .topic image {
  display: inline-block;
  width: 27rpx;
  height: 27rpx;
}

.list .topic .r {
  position: absolute;
  right: 0rpx;
  top: 4rpx;
  color: #7b7b7d;
}

.list .topic .r image {
  margin-bottom: -3rpx;
}

.list .item {
  padding: 20rpx 0;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}

.list .item .suo {
  float: left;
  width: 198rpx;
  height: 160rpx;
  position: relative;
}

.list .item .suo image {
  display: block;
  width: 198rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.list .item .suo text {
  display: block;
  position: absolute;
  left: 8rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
}

.list .item .info {
  float: right;
  width: 490rpx;
  height: 160rpx;
  position: relative;
}

.list .item .info image {
  display: inline-block;
  width: 39rpx;
  height: 39rpx;
  margin-bottom: -5rpx;
}

.list .item .info .name {
  font-size: 32rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list .item .info .sub-name {
  font-size: 28rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
  min-height: 70rpx;
}

.list .item .info .author {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  position: relative;
}

.link {
  position: relative;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f8f8f8;
  padding-bottom: 30rpx;
}

.link .dot {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #ee4942;
  position: absolute;
  right: 70rpx;
  top: 30rpx;
}

.link .arrow {
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 35rpx;
  opacity: 0.5;
}

.link .icon {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin-bottom: -15rpx;
  margin-right: 10rpx;
}

.xkuai {
  display: inline-block;
  margin-right: 30rpx;
  font-size: 26rpx;
}

.xkuai image {
  margin-bottom: -4rpx;
  margin-right: 10rpx;
}

.ifopen {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
}

.ceng {
  display: block;
  width: 750rpx;
  height: 1334rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.5);
}

.role {
  width: 690rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: fixed;
  left: 50%;
  margin-left: -345rpx;
  z-index: 30;
  top: 250rpx;
  overflow: hidden;
}

.role .item {
  width: 33.33%;
  float: left;
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx 0;
  position: relative;
}

.role .item .tu {
  display: block;
  margin: 0 auto;
  width: 161rpx;
  height: 161rpx;
}

.role .item text {
  display: block;
  padding-top: 20rpx;
  color: #666;
}

.role .item text.cur {
  color: #5677fc;
}

.role .item .imgbox {
  position: relative;
}

.role .item .selected {
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  bottom: 0;
}

.role .btnbox {
  width: 100%;
  float: left;
  margin-top: 30rpx;
}

.role .btnbox .btn {
  display: block;
  width: 630rpx;
  margin: 0 auto;
  font-size: 29rpx;
  background-color: #5677fc;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 30rpx;
  margin-top: -30rpx;
}
