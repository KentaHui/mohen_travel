<view class='ban-list'>
  <view class='item' wx:for="{{list}}" wx:key="" bindtap='tobandet'>
    <image class='avatar' src='{{item.avatar}}'></image>
    <view class='name'>
      {{item.name}}
      <image class='sex' src='/images/female.png'></image>
    </view>
    <view class='address'>
      <image class='map' src='/images/map.png'></image>
      {{item.address}}
    </view>
    <view class='info'>{{item.info}}</view>
  </view>
</view>
<view class='fly-btn' bindtap='topost'>加入伴游</view>