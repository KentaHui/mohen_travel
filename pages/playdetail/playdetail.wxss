/* pages/playdetail/playdetail.wxss */
page {
  background-color: #f1f1f1;
}
.travel-list .item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.travel-list .item .hd .avatar {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: -15rpx;
  margin-right: 10rpx;
}

.travel-list .item .hd {
  font-size: 20rpx;
  color: #939393;
}

.travel-list .item .bd {
  font-size: 20rpx;
  color: #666;
  line-height: 32rpx;
}

.travel-list .item .bd .titt {
  font-size: 28rpx;
  color: #333;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.travel-list .item .bd .sub-titt {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.travel-list .item .tubox {
  overflow: hidden;
  margin-top: 20rpx;
}

.travel-list .item .tubox .img {
  width: 224rpx;
  height: 210rpx;
  float: left;
  margin-right: 10rpx;
}

.travel-list .item .tubox .img:nth-child(3) {
  margin-right: 0;
}

.travel-list .item .tubox .img image {
  display: block;
  width: 224rpx;
  height: 210rpx;
}

.travel-list .item .ft view {
  display: inline-block;
  font-size: 20rpx;
  color: #939393;
  margin-right: 30rpx;
  padding-top: 30rpx;
}

.travel-list .item .ft view image {
  display: inline-block;
  width: 26rpx;
  height: 21rpx;
  margin-right: 5rpx;
  margin-top: -0rpx;
}
