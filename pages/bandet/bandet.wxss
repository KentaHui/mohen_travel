/* pages/yuandet/yuandet.wxss */

.top {
  width: 750rpx;
  height: 284rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  position: relative;
}

.top .hui {
  width: 750rpx;
  height: 284rpx;
  background-color: rgba(0, 0, 0, 0.5);
  position: relative;
}

.anchor {
  width: 392rpx;
  height: 82rpx;
  background-color: rgba(0, 0, 0, 0.2);
  position: absolute;
  left: 50%;
  margin-left: -186rpx;
  top: 30rpx;
  border-radius: 82rpx;
}

.avatar {
  display: block;
  width: 65rpx;
  height: 65rpx;
  border-radius: 65rpx;
  position: absolute;
  left: 8rpx;
  top: 6rpx;
  border: 2rpx solid #fff;
  overflow: hidden;
}

.follow {
  display: block;
  width: 102rpx;
  height: 46rpx;
  position: absolute;
  right: 20rpx;
  top: 18rpx;
}

.nickname {
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  left: 90rpx;
  top: 10rpx;
}

.local {
  width: 102rpx;
  height: 46rpx;
  background-color: #5677fc;
  color: #fff;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  border-radius: 46rpx;
  text-align: center;
  font-size: 22rpx;
  line-height: 46rpx;
}

.local image {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-bottom: -3rpx;
}

.online {
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  left: 90rpx;
  top: 45rpx;
  opacity: 0.5;
}

.hd-titt {
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  left: 50%;
  margin-left: -240rpx;
  top: 125rpx;
  text-align: center;
  width: 480rpx;
  line-height: 40rpx;
}

.apply {
  color: #5677fc;
  font-size: 28rpx;
  width: 260rpx;
  height: 70rpx;
  position: absolute;
  left: 50%;
  margin-left: -130rpx;
  bottom: -25rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #fff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.4);
  border-radius: 70rpx;
}

.applyed {
  background-color: #5677fc;
  color: #fff;
}

.info {
  font-size: 24rpx;
  color: #656565;
  width: 690rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.info .titt {
  font-size: 28rpx;
  padding-bottom: 10rpx;
}

.info .titt image {
  display: inline-block;
  width: 35rpx;
  height: 27rpx;
  margin-right: 4rpx;
  margin-bottom: -1rpx;
}

.info1 .titt {
  color: #5677fc;
}

.info2 .titt {
  color: #19c1e5;
}

.info .zw {
  line-height: 45rpx;
}

.info3 .titt {
  color: #f98649;
}

.info .zw image {
  display: block;
  width: 690rpx;
  height: 280rpx;
}

.info3 .tips view {
  display: inline-block;
  padding: 4rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  background-color: #19c1e5;
  color: #fff;
  margin: 20rpx 5rpx;
}

.info3 .tips view:nth-child(1) {
  background-color: #19c1e5;
}

.info3 .tips view:nth-child(2) {
  background-color: #f99;
}

.info3 .tips view:nth-child(3) {
  background-color: #969;
}

.info3 .tips view:nth-child(4) {
  background-color: #fcc;
}

.info3 .tips view:nth-child(5) {
  background-color: #ccf;
}

.pl-item {
  margin-top: 30rpx;
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.info3 {
  margin-bottom: 50rpx;
}

.pl-item .tx {
  margin-bottom: 20rpx;
}

.pl-item .tx image {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-bottom: -10rpx;
  margin-right: 5rpx;
}
